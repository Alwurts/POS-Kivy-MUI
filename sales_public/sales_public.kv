

<ModButton@Button>
    font_size:'20dp'
    bold: True

<SalesPublicScreen>:
    name: 'sales_public'
    md_list_sales: md_list_id
    
    BoxLayout:
        orientation: 'vertical'
        padding: [5,5]
        spacing: 10
        BoxLayout:
            size_hint_y: None
            height: "50sp"
        ScrollView:

            MDList:
                id: md_list_id
                ThreeLineAvatarListItem:
                    text: "1/4 Barra"
                    secondary_text: "$40.00"
                    tertiary_text: "Hace 31 Minutos"

                    ImageLeftWidget:
                        source: r"assets\icon_water_19L.png"
    MDFloatingActionButtonSpeedDial:
        label_text_color: 1,1,1,1

        data: {'Vender barra': r'assets\icon_ice_block.png','Vender cubo': r'assets\icon_ice_cube.png','Vender garrafon': r'assets\icon_water_19L.png'}
        root_button_anim: True                       
    
                
        