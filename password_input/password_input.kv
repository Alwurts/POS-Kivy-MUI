<ModRaisedButton@MDFlatButton>
    
    font_style: 'H4'
    #elevation_normal: 12
    md_bg_color: 0, 0, .8, .5

<PasswordInputScreen>:
    name: 'password_input'
    id: password_input_screen
    user: ''
    show_password: lbl_password
    btn_cancel_delete: cancel_delete_btn
    lbl_info_field: info_field
    lbl_user_to_log: lbl_user_id
    BoxLayout:
        orientation: 'vertical'
        padding: [0,0]
        spacing: 10 
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 1
            Image:
                source: r'assets\avatar_default.png'
                size_hint_y: None
                pos: (self.parent.x, self.parent.height / 2 - self.height / 2)
                height: self.parent.height/1.9      
            MDLabel:
                id: lbl_user_id
                text: 'Alwurts'
                font_style: 'H4'
                halign: 'center'
                size_hint_y: None
                height: 70
        MDLabel:
            text: 'Ingresa la contrasena'
            id: info_field
            font_style: 'H6'
            halign: 'center'
            size_hint_y: None
            height: 70
        MDLabel:
            id: lbl_password
            text: ''
            font_style: 'H2'
            halign: 'center'
            size_hint_y: None
            height: 90
        GridLayout:
            padding: [40,0]
            spacing: 10
            cols: 3
            AnchorLayout:
                size_hint_y: None
                height: but1.height
                ModRaisedButton:
                    id: but1
                    text: '1'
                    on_press: root.update_password(self)
            AnchorLayout:
                size_hint_y: None
                height: but1.height
                ModRaisedButton:
                    id: but1
                    text: '2'
                    on_press: root.update_password(self)
            AnchorLayout:
                size_hint_y: None
                height: but1.height
                ModRaisedButton:
                    id: but1
                    text: '3'
                    on_press: root.update_password(self)
            AnchorLayout:
                size_hint_y: None
                height: but1.height
                ModRaisedButton:
                    id: but1
                    text: '4'
                    on_press: root.update_password(self)
            AnchorLayout:
                size_hint_y: None
                height: but1.height
                ModRaisedButton:
                    id: but1
                    text: '5'
                    on_press: root.update_password(self)
            AnchorLayout:
                size_hint_y: None
                height: but1.height
                ModRaisedButton:
                    id: but1
                    text: '6'
                    on_press: root.update_password(self)
            AnchorLayout:
                size_hint_y: None
                height: but1.height
                ModRaisedButton:
                    id: but1
                    text: '7'
                    on_press: root.update_password(self)
            AnchorLayout:
                size_hint_y: None
                height: but1.height
                ModRaisedButton:
                    id: but1
                    text: '8'
                    on_press: root.update_password(self)
            AnchorLayout:
                size_hint_y: None
                height: but1.height
                ModRaisedButton:
                    id: but1
                    text: '9'
                    on_press: root.update_password(self)
            AnchorLayout:
                size_hint_y: None
                height: cancel_delete_btn.height
                ModRaisedButton:
                    id: cancel_delete_btn
                    text: 'CANCELAR'
                    font_style: 'H6'
                    on_press: root.go_back()
            AnchorLayout:
                size_hint_y: None
                height: but1.height
                ModRaisedButton:
                    id: but1
                    text: '0'
                    on_press: root.update_password(self)
            AnchorLayout:
                size_hint_y: None
                height: but1.height
                MDIconButton:
                    id: but1
                    icon: "check-bold"
                    font_size: "40sp"
                    
                    on_press: root.check_password()  
       
        
           
