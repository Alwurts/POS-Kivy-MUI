<ModRaisedButton@MDFillRoundFlatButton>
    
    font_style: 'H4'
    elevation_normal: 12
    md_bg_color: 0, 0, .8, .5

<PasswordInputScreen>:
    name: 'password_input'
    id: password_input_screen
    user: ''
    show_password: lbl_password
    BoxLayout:
        orientation: 'vertical'
        padding: [20,50]
        spacing: 10   
        MDLabel:
            text: 'Ingresa la contrasena'
            font_style: 'H3'
            halign: 'center'
            size_hint_y: .2
        MDLabel:
            id: lbl_password
            text: '. . . .'
            font_style: 'H2'
            halign: 'center'
            size_hint_y: .4
        GridLayout:

            spacing: 10
            cols: 3

            AnchorLayout:
                size_hint_y: None
                height: but1.height
                ModRaisedButton:
                    id: but1
                    text: '1'
                    on_press: root.update_password(self)
            AnchorLayout:
                size_hint_y: None
                height: but1.height
                ModRaisedButton:
                    id: but1
                    text: '2'
                    on_press: root.update_password(self)
            AnchorLayout:
                size_hint_y: None
                height: but1.height
                ModRaisedButton:
                    id: but1
                    text: '3'
                    on_press: root.update_password(self)
            AnchorLayout:
                size_hint_y: None
                height: but1.height
                ModRaisedButton:
                    id: but1
                    text: '4'
                    on_press: root.update_password(self)
            AnchorLayout:
                size_hint_y: None
                height: but1.height
                ModRaisedButton:
                    id: but1
                    text: '5'
                    on_press: root.update_password(self)
            AnchorLayout:
                size_hint_y: None
                height: but1.height
                ModRaisedButton:
                    id: but1
                    text: '6'
                    on_press: root.update_password(self)
            AnchorLayout:
                size_hint_y: None
                height: but1.height
                ModRaisedButton:
                    id: but1
                    text: '7'
                    on_press: root.update_password(self)
            AnchorLayout:
                size_hint_y: None
                height: but1.height
                ModRaisedButton:
                    id: but1
                    text: '8'
                    on_press: root.update_password(self)
            AnchorLayout:
                size_hint_y: None
                height: but1.height
                ModRaisedButton:
                    id: but1
                    text: '9'
                    on_press: root.update_password(self)
            AnchorLayout:
                size_hint_y: None
                height: but1.height
                ModRaisedButton:
                    id: but1
                    text: 'C'
                    on_press: root.reset_password()
            AnchorLayout:
                size_hint_y: None
                height: but1.height
                ModRaisedButton:
                    id: but1
                    text: '0'
                    on_press: root.update_password(self)
            AnchorLayout:
                size_hint_y: None
                height: but1.height
                ModRaisedButton:
                    id: but1
                    text: 'OK'
                    md_bg_color: 0, .8, 0, .7
                    on_press: root.check_password()  
        
        AnchorLayout:
            size_hint_y: None
            height: but1.height
            MDFloatingActionButton:
                id: but1
                #text:'BACK'
                user_font_size: "50sp"
                icon: 'arrow-left'
                #font_style: 'H3'
                #elevation_normal: 12
                md_bg_color: "F5A623"
                on_press: root.go_back()

        
           
