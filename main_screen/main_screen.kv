<ContentNavigationDrawer>:
    orientation: "vertical"
    padding: "8dp"
    spacing: "8dp"
    lbl_user_logged: user_logged_id
    BoxLayout:
        size_hint_y: .15
        BoxLayout:
            orientation:'vertical'
            spacing: 10
            AnchorLayout:
                anchor_x: "center"
                size_hint_y: None
                height: avatar.height

                Image:
                    id: avatar
                    size_hint: None, None
                    size: "56dp", "56dp"
                    source: r'kivy_env\scr\MD\assets\avatar_default.png'

            MDLabel:
                id: user_logged_id
                text: ""
                font_style: "Button"
                halign: 'center'
                size_hint_y: None
                height: self.texture_size[1]
        AnchorLayout:
            
            #size_hint_y: None
            #height: logout.height
            MDRaisedButton:
                id: logout
                text: 'LOGOUT'
                on_press: root.log_out()
    
    ScrollView:

        MDList:

            OneLineIconListItem:
                text: "Inicio"
                
                on_press:
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "overview_screen"
                IconLeftWidget:
                    icon: "home"
            OneLineIconListItem:
                text: "Ventas Publico"
                on_press:
                    root.nav_drawer.set_state("close")
                    root.open_sales_public()
                IconLeftWidget:
                    icon: "account-cash"


<MainScreen>:
    name: 'main_screen'
    id: main_screen_id
    screen_manager: screen_manager
    #lbl_user_logged: user_logged_id
    user_logged: ''
    MDToolbar:
        id: toolbar
        pos_hint: {"top": 1}
        elevation: 10
        title: "Purificadora La Uno"
        left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]

    MDNavigationLayout:
        x: toolbar.height

        ScreenManager:
            id: screen_manager


        MDNavigationDrawer:
            id: nav_drawer

            ContentNavigationDrawer:
                id: content_nav_id
                screen_manager: screen_manager
                nav_drawer: nav_drawer
                main_screen: main_screen_id
                